<controls:FancyWindow
    SetSize="400 120"
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls">
    <BoxContainer
        HorizontalExpand="True"
        Margin="10"
        Orientation="Vertical">
        <!--  Load controls  -->
        <BoxContainer Orientation="Horizontal">
            <Label
                Name="Text"
                StyleClasses="LabelKeyText"
                Text="{Loc 'adjustable-power-set-load'}" />
            <LineEdit
                HorizontalExpand="True"
                Margin="5,0,5,0"
                MinSize="70 0"
                Name="Load" />
            <OptionButton Name="PowerDropDown" />
            <Button
                Margin="5,0,0,0"
                Name="SubmitButton"
                Text="{Loc 'adjustable-power-submit'}" />
        </BoxContainer>
        <!--  Power enable, unsaved change warning  -->
        <BoxContainer
            HorizontalExpand="True"
            Margin="0,5,0,5"
            Orientation="Horizontal">
            <Label
                FontColorOverride="yellow"
                HorizontalAlignment="Right"
                Margin="0,0,5,0"
                Name="UnsavedChanges"
                Text="{Loc 'adjustable-power-unsaved-changes'}"
                Visible="False" />
            <Label
                HorizontalAlignment="Right"
                HorizontalExpand="True"
                Margin="0,0,5,0"
                StyleClasses="LabelKeyText"
                Text="{Loc 'adjustable-power-status-label'}" />
            <Button
                HorizontalAlignment="Right"
                Name="TogglePowerButton"
                Text="{Loc 'adjustable-power-status-enabled'}" />
        </BoxContainer>
        <!--  Arbitrary BUI text  -->
        <BoxContainer Orientation="Horizontal">
            <RichTextLabel Name="ArbitraryText" Visible="False" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
